@model MinaBilder3._0.Models.Credentials



@using (Html.BeginForm())
{

    <div class="form-horizontal register-form">
        <div class="form-group">
            @Html.Label("Användarnamn", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })


            </div>
        </div>

        <div class="form-group">
            @Html.Label("Lösenord", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>


        <input class="btn btn-primary col-md-12" type="submit" name="submit" value="Logga in">
    </div>


}
@if (ViewBag.LoggedInFail == true)
{
    <div style="margin-top:120px" class="alert alert-danger">
        <strong>Fel användarnamn eller lösenord!</strong> Var god försök igen.
    </div>
}
